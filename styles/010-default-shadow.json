{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Default - Button Shadow and Link Underlines",
	"settings": {
		"custom": {
			"shadow": "var(--wp--preset--shadow--natural)"
		}
	},
	"styles": {
		"elements": {
			"link": {
				"typography": {
					"textDecoration": "underline"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			}
		}
	}
}