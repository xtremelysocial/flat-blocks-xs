	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"textTransform": "none"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--light-red)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--red)"
							}
						},
						":focus": {
							"color": {
								"text": "var(--wp--preset--color--red)"
							}
						}
					}
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--light-red)",
					"text": "var(--wp--preset--color--foreground-alt)"
				}
			},
			"core/navigation": {
				"typography": {
					"textTransform": "none"
				}
			},
			"core/navigation-item": {
				"typography": {
					"textTransform": "none"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"textTransform": "uppercase",
					"fontSize": "var(--wp--preset--font-size--larger)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"textTransform": "uppercase"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"textTransform": "uppercase"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--light-red)",
					"text": "var(--wp--preset--color--foreground-alt)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--light-red)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--red)"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--red)"
					}
				}
			}
		}
	}	
